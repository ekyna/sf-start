{% spaceless %}
<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {% block metas %}{% endblock metas %}

    {{ ui_google_font() }}

    {% block stylesheets -%}
        {% stylesheets output='css/main.css' filter='cssrewrite, ?yui_css'
            'css/content.css'
            'css/fontawesome.css'
            '@WebBundle/Resources/asset/css/main.css'
        %}
        <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
        {% endstylesheets %}
    {%- endblock stylesheets %}

    {% include 'EkynaCoreBundle:Ui:ie-fix.html.twig' %}

    {{ require_js(not app.debug) }}
</head>
<body>
    {% block body %}{% endblock body %}

    {% block footer %}
        {{ render_esi(controller('AppBundle:Layout:footer')) }}
    {% endblock footer %}

    {% block javascripts -%}
        <script type="text/javascript">
            require(['bundles/web/js/main']);
        </script>
    {%- endblock javascripts %}
</body>
</html>
{% endspaceless %}