<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="form-horizontal">
    <div class="form-body">
        <div class="form-group row">
            <label class="control-label col-lg-5 required" for="username">
                {{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}
            </label>
            <div class="col-lg-7">
                <input type="text" id="username" name="username" required="required" class="form-control">
            </div>
        </div>
        <div class="form-footer">
            <div class="form-group row">
                <div class="col-sm-offset-4 col-sm-8">
                    <button type="submit" name="submit" class="btn btn-primary">
                        <span class="glyphicon glyphicon-ok"></span>
                        {{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>
